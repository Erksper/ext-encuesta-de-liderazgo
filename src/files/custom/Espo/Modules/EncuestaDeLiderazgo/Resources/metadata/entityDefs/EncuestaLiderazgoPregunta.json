{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true,
            "maxLength": 255
        },
        "pregunta": {
            "type": "text",
            "required": true,
            "rows": 4
        },
        "tipo": {
            "type": "enum",
            "options": ["seleccion_simple", "texto"],
            "default": "seleccion_simple",
            "required": true
        },
        "categoriaLiderazgo": {
            "type": "link",
            "entity": "EncuestaLiderazgoCategoria",
            "required": true
        },
        "orden": {
            "type": "int",
            "default": 0
        },
        "activa": {
            "type": "bool",
            "default": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        }
    },
    "links": {
        "categoriaLiderazgo": {
            "type": "belongsTo",
            "entity": "EncuestaLiderazgoCategoria",
            "foreign": "preguntas"
        },
        "respuestas": {
            "type": "hasMany",
            "entity": "EncuestaLiderazgoRespuesta",
            "foreign": "pregunta"
        }
    },
    "collection": {
        "orderBy": "orden",
        "order": "asc"
    },
    "indexes": {
        "categoriaLiderazgo": {
            "columns": ["categoria_liderazgo_id", "deleted"]
        },
        "activa": {
            "columns": ["activa", "deleted"]
        }
    }
}